<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cognitutor.cognistudyapp" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".LoadingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:parentActivityName=".RegistrationActivity" >
        </activity>
        <activity
            android:name=".NewChallengeActivity"
            android:label="@string/title_activity_new_challenge"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".ChooseBoardConfigurationActivity"
            android:label="@string/title_activity_choose_board_configuration"
            android:parentActivityName=".NewChallengeActivity" >
        </activity>
        <activity
            android:name=".ChallengeActivity"
            android:label="@string/title_activity_challenge"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".QuestionActivity"
            android:label="@string/title_activity_question"
            android:parentActivityName=".ChallengeActivity" >
        </activity>
        <activity
            android:name=".BattleshipAttackActivity"
            android:label="@string/title_activity_battleship_attack"
            android:parentActivityName=".ChallengeActivity" >
        </activity>
        <activity
            android:name=".QuestionHistoryActivity"
            android:label="@string/title_activity_question_history"
            android:parentActivityName=".ChallengeActivity" >
        </activity>
        <activity
            android:name=".PastQuestionActivity"
            android:label="@string/title_activity_past_question"
            android:parentActivityName=".QuestionHistoryActivity" >
        </activity>
        <activity android:name=".ChallengeAnalyticsActivity"
            android:label="@string/title_activity_challenge_analytics"
            android:parentActivityName=".ChallengeActivity" >
        </activity>
    </application>

</manifest>
