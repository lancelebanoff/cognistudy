<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cognitutor.cognistudyapp.ChallengeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resign"
        android:id="@+id/btnResign"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your turn!"
        android:id="@+id/btnYourTurn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="navigateToQuestionActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question History"
        android:id="@+id/btnQuestionHistory"
        android:layout_marginBottom="56dp"
        android:layout_above="@+id/btnYourTurn"
        android:layout_alignLeft="@+id/btnYourTurn"
        android:layout_alignStart="@+id/btnYourTurn"
        android:onClick="navigateToQuestionHistoryActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenge Analytics"
        android:id="@+id/btnChallengeAnalytics"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="navigateToChallengeAnalyticsActivity" />
</RelativeLayout>
