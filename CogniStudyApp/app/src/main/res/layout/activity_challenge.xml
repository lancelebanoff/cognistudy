<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activities.ChallengeActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:id="@+id/btnResign"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your turn!"
        android:id="@+id/btnYourTurn"
        android:onClick="navigateToQuestionActivity"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q"
        android:id="@+id/btnQuestionHistory"
        android:onClick="navigateToQuestionHistoryActivity"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnChallengeAnalytics"
        android:layout_toStartOf="@+id/btnChallengeAnalytics" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/btnChallengeAnalytics"
        android:onClick="navigateToChallengeAnalyticsActivity"
        android:layout_alignTop="@+id/btnQuestionHistory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:id="@+id/btnSwitchView"
        android:onClick="onClick_btnSwitchView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:id="@+id/shipsGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnSwitchView"
        android:layout_above="@+id/btnYourTurn" />

    <GridLayout
        android:id="@+id/targetsGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnSwitchView"
        android:layout_above="@+id/btnYourTurn" />

    <com.cognitutor.cognistudyapp.Custom.RoundedImageView
        android:id="@+id/imgProfileRounded1"
        android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
        android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/txtScore"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/shipsGridLayout"
        android:src="@drawable/default_profile_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtScore"
        android:text="@string/blank_score"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toLeftOf="@+id/imgProfileRounded2" />

    <com.cognitutor.cognistudyapp.Custom.RoundedImageView
        android:id="@+id/imgProfileRounded2"
        android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
        android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/shipsGridLayout"
        android:src="@drawable/default_profile_pic" />

</RelativeLayout>
