<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cognitutor.cognistudyapp.ChooseBoardConfigurationActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randomize"
        android:id="@+id/btnRandomize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Challenge"
        android:id="@+id/btnStartChallenge"
        android:layout_alignTop="@+id/btnRandomize"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="navigateToChallengeActivity" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgGameBoard"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnStartChallenge"
        android:src="@drawable/gameboard"
        android:layout_above="@+id/btnRandomize"
        android:layout_alignRight="@+id/btnStartChallenge"
        android:layout_alignEnd="@+id/btnStartChallenge" />
</RelativeLayout>
