<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.VerityEmailActivity">

    <TextView
        android:id="@+id/txtVerifyEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please verify your email to continue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.cognitutor.cognistudyapp.Custom.CogniButton
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="Continue"
        android:onClick="checkEmailVerified"
        android:layout_below="@+id/txtVerifyEmail"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_gravity="center_horizontal" />

    <com.cognitutor.cognistudyapp.Custom.CogniButton
        android:id="@+id/btnLogout"
        android:layout_marginTop="37dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:onClick="logout"
        android:layout_below="@+id/btnContinue"
        android:layout_alignRight="@+id/btnContinue"
        android:layout_alignEnd="@+id/btnContinue"
        android:layout_gravity="center_horizontal" />

    <com.cognitutor.cognistudyapp.Custom.CogniButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend confirmation email"
        android:id="@+id/btnResendLink"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnLogout"
        android:layout_alignStart="@+id/btnLogout"
        android:onClick="resendConfirmationEmail"/>


</RelativeLayout>
